{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "types": [
    "reflect-metadata",
    "mocha"
  ],
  "exclude": [
    "node_modules"
  ],
}
